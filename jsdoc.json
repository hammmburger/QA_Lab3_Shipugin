{
  "source": {
    "include": [
      "src"
    ],
    "includePattern": ".js$"
  },
  "opts": {
    "destination": "out",
    "recurse": true,
    "template": "node_modules/better-docs"
  },
  "templates": {
    "default": {
      "staticFiles": { "include": ["./images"] },
      "includeDate": false,
      "scripts": [
        "https://polyfill.io/v3/polyfill.min.js?features=es6",
        "https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"
      ]
    }
  },
  "plugins": ["plugins/markdown"]
}